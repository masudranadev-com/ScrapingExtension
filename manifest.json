{
  "manifest_version": 3,
  "name": "Category Store Clicker",
  "version": "1.0",
  "description": "Automates category navigation and counts stores",

  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://www.target.com/*"],

  "content_scripts": [
    {
      "matches": ["https://www.target.com/*"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html"
  }
}
