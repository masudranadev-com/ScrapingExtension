{
  "manifest_version": 3,
  "name": "Target Mail Hunter",
  "version": "1.0",
  "description": "Automates seller email collection from Target marketplace",

  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://www.target.com/*"],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.target.com/*"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
